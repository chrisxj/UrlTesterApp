<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/button_tab_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_tab_source"
        android:onClick="onHtmlSourceTabClicked"/>

    <Button
        android:id="@+id/button_tab_headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_tab_response_headers"
        android:onClick="onResponseHeadersTabClicked"
        android:layout_toRightOf="@id/button_tab_source"/>

</RelativeLayout>